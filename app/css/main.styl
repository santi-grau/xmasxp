@font-face {
	font-family: 'matrix';
	src: url('../assets/ScreenMatrix.ttf');
}

html
	width 100%
	height 100%
	padding 0
	margin 0
body
	width 100%
	height 100%
	margin 0
	padding 0
	background #eeeeff
	#main
		width 100%
		height 100%
		position fixed
		top 0
		left 0
		z-index 1
	#speed
		position fixed
		z-index 2
	#position
		top 20px
		position fixed
		z-index 2
	#altitude
		top 40px
		position fixed
		z-index 2
	#intro
		width 100%
		height 100%
		position fixed
		z-index 10
		top 0
		left 0
		background-color #cc0000
		#loader
			width 100px
			height 100px
			position absolute
			left 50%
			top 50%
			margin-left -50px
			margin-top -50px
	#start-button
		position fixed
		z-index 20
		bottom 40px
		left 50%
		margin-left -50px
		width 100px
		height 40px
		background-color #ffffff
	#mode-button
		position fixed
		z-index 20
		bottom 40px
		right 40px
		width 100px
		height 40px
		background-color #cccccc
