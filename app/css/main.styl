@font-face {
	font-family: 'matrix';
	src: url('../assets/ScreenMatrix.ttf');
}

html
	width 100%
	height 100%
	padding 0
	margin 0
body
	width 100%
	height 100%
	margin 0
	padding 0
	background #eeeeff
	#main
		width 100%
		height 100%
		position fixed
		top 0
		left 0
		z-index 1
	#speed
		position fixed
		z-index 2
	#position
		top 20px
		position fixed
		z-index 2
	#altitude
		top 40px
		position fixed
		z-index 2
	#intro
		width 100%
		height 100%
		position fixed
		z-index 10
		top 0
		left 0
		background-color #cc0000
		#loader
			width 100px
			height 100px
			position absolute
			left 50%
			top 50%
			margin-left -50px
			margin-top -50px
	#start-button
		position fixed
		z-index 20
		bottom 40px
		left 50%
		margin-left -50px
		width 100px
		height 40px
		background-color #ffffff
	#mode-button
		position absolute
		z-index 20
		bottom 30px
		left 40px
		float left
		width 40px
		height 25px
		background url(../assets/mode-button.png) no-repeat 0 0
		background-size 40px 100px
		cursor pointer
		display none
		opacity 0.001
		&.cardboard
			background-position 0 0
		&.phone
			background-position 0 -25px
		&.pointerlock
			background-position 0 -50px
		&.drag
			background-position 0 -75px
	#audio-toggle
		position absolute
		z-index 20
		bottom 30px
		right 40px
		float: left
		width: 25px
		height: 25px
		text-indent -9999px
		will-change opacity, transform
		transform translate3d( 0, 0px, 0 )
		background url(../assets/audio.png) no-repeat 0 0
		background-size 25px 50px
		background-position 0 -25px
		cursor pointer
		display none
		opacity 0.001
		&.playing
			background-position 0 0
